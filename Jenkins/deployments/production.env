# Common application settings
DJANGO_SECRET_KEY=production-secret-key-change-me
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=app.example.com,web
DJANGO_CSRF_TRUSTED_ORIGINS=https://app.example.com

# Service configuration
WEB_PORT=8000
WEB_COMMAND=gunicorn celery_demo.wsgi:application --bind 0.0.0.0:8000 --workers=${GUNICORN_WORKERS:-5}
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
GUNICORN_WORKERS=5

# Database (example PostgreSQL connection string)
DATABASE_URL=postgres://prod_user:prod_password@prod-db.example.com:5432/celery_demo

