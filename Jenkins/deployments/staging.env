# Common application settings
DJANGO_SECRET_KEY=staging-secret-key-change-me
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=staging.example.com,web
DJANGO_CSRF_TRUSTED_ORIGINS=https://staging.example.com

# Service configuration
WEB_PORT=8080
WEB_COMMAND=gunicorn celery_demo.wsgi:application --bind 0.0.0.0:8000 --workers=${GUNICORN_WORKERS:-3}
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
GUNICORN_WORKERS=3

# Database (example PostgreSQL connection string)
DATABASE_URL=postgres://staging_user:staging_password@staging-db.example.com:5432/celery_demo

